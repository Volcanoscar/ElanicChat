<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:paddingTop="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_ripple">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black_20_percent"/>

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/imageview"
        android:text="5:09 PM"
        android:textAllCaps="true"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/black_40_percent"/>

    <TextView
        android:id="@+id/unread_message_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time_view"
        android:layout_marginTop="4dp"
        android:textColor="@color/white_100_percent"
        android:textSize="12sp"
        android:text="2"
        android:gravity="center"
        android:background="@drawable/accent_circle"/>
    
    <TextView
        android:id="@+id/product_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/black_80_percent"
        android:text="Green Black Dress"
        android:layout_alignTop="@id/imageview"
        android:layout_toRightOf="@id/imageview"
        android:layout_toLeftOf="@id/time_view"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/black_40_percent"
        android:text="Ankita: I dont care"
        android:layout_alignBottom="@id/imageview"
        android:layout_toRightOf="@id/imageview"
        android:layout_toLeftOf="@id/unread_message_view"
        android:layout_marginRight="8dp"
        android:drawablePadding="4dp"
        android:layout_marginBottom="2dp"/>

    <View
        android:id="@+id/divider1"
        android:layout_below="@id/imageview"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/imageview"
        android:layout_height="0.5dp"
        android:background="#ffcacaca"/>

    <LinearLayout
        android:id="@+id/offer_layout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/divider1">

        <in.elanic.elanicchatdemo.features.shared.widgets.VerticalTwoTextView
            android:id="@+id/offer_price_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_40_percent"
            app:subtextColor="@color/black_80_percent"
            android:textSize="12sp"
            app:subtextSize="16sp"
            android:text="OFFER"
            app:subtextFontStyle="medium"
            app:subtextTopMargin="2dp"
            app:subtext="Rs. 600"/>

        <TextView
            android:id="@+id/offer_response_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/white_bg_ripple"
            android:layout_marginRight="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/black_80_percent"
            android:textSize="13sp"
            android:gravity="center_vertical"
            style="@style/MediumFontTextView"
            android:textAllCaps="true"
            android:drawableLeft="@drawable/ic_done_grey_800_18dp"
            android:drawablePadding="18dp"
            android:text="ACCEPT"/>

        <TextView
            android:id="@+id/offer_valid_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_40_percent"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_timer_grey_400_18dp"
            android:drawablePadding="6dp"
            android:text="22:10"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_grey_800_18dp"/>

    </LinearLayout>

    <View
        android:layout_below="@id/offer_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffcacaca"/>

</RelativeLayout>