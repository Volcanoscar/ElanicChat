<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/chat_bubble_grey"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/offer_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_40_percent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_timer_grey_400_18dp"
            android:drawablePadding="8dp"
            android:text="22:10"/>

        <TextView
            android:id="@+id/offer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/offer_time_view"
            android:textColor="@color/black_80_percent"
            android:textSize="16sp"
            android:text="Rs 600"/>

        <View
            android:id="@+id/divider1"
            android:layout_below="@id/offer_view"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffcacaca"/>

            <TextView
                android:id="@+id/buy_now_button"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_below="@id/divider1"
                android:layout_height="wrap_content"
                android:textColor="@color/black_60_percent"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/ic_shopping_basket_grey_800_18dp"
                android:drawablePadding="8dp"
                android:text="@string/offer_buy_now"/>

            <TextView
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_below="@id/divider1"
                android:textColor="@color/black_80_percent"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/ic_done_grey_600_18dp"
                android:drawablePadding="8dp"
                android:text="@string/offer_accept"/>

            <TextView
                android:id="@+id/decline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp"
                android:layout_below="@id/divider1"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/black_60_percent"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:drawableLeft="@drawable/ic_close_grey_600_18dp"
                android:drawablePadding="8dp"
                android:text="@string/offer_decline"/>

        <TextView
            android:id="@+id/offer_status"
            android:layout_width="match_parent"
            android:layout_below="@id/divider1"
            android:visibility="gone"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="8dp"
            android:textColor="@color/black_80_percent"
            android:drawableRight="@drawable/ic_alarm_off_grey_400_18dp"
            android:textSize="12sp"
            android:text="@string/offer_waiting_response"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black_40_percent"
        android:text="22:54"
        android:textSize="10sp"/>

</LinearLayout>