<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff4f4f4"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:padding="6dp"
        android:textColor="@color/black_80_percent"
        android:text="@string/make_an_offer"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:scaleType="center"
        app:fabSize="mini"
        android:transitionName="offer_fab_transition"
        android:src="@drawable/ic_close_white_24dp"
        app:backgroundTint="@color/grey_200"
        android:background="@drawable/grey_circle_ripple"
        tools:targetApi="21" />

    <android.support.v7.widget.CardView
        android:id="@+id/input_view"
        android:layout_marginTop="74dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        app:contentPadding="12dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/offer_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black_80_percent"
            android:text="Rs. 600"/>

        <TextView
            android:id="@+id/offer_earn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="18sp"
            android:textColor="@color/black_60_percent"
            android:text="Rs. 600"/>

    </android.support.v7.widget.CardView>

    <in.elanic.elanicchatdemo.views.widgets.NumbersLayout
        android:id="@+id/numbers_layout"
        android:layout_gravity="bottom"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>